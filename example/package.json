{
  "name": "@pwrc/example",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./public/static",
    "build:client": "webpack -c ./config/webpack.config.client.js",
    "build:server": "webpack -c ./config/webpack.config.server.js",
    "build": "yarn clean && cross-env NODE_ENV=production yarn build:client && yarn build:server && yarn ssg:404",
    "build:dev": "yarn clean && cross-env NODE_ENV=production webpack -c ./config/webpack.config.development.js",
    "dev:watch": "cross-env NODE_ENV=development webpack --watch -c ./config/webpack.config.development.js",
    "dev": "yarn clean && yarn dev:watch",
    "start:express": "node ./dist/express.js",
    "ssg": "node ./dist/static.js",
    "ssg:404": "node ./dist/static.js 404.html",
    "start:static": "serve ./public"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@pwrc/cache-control": "*",
    "@pwrc/express": "*",
    "@pwrc/static": "*",
    "@pwrc/webpack": "*",
    "autoprefixer": "^10.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "esbuild-loader": "^2.7.0",
    "mini-css-extract-plugin": "^1.3.3",
    "nodemon": "^2.0.6",
    "nodemon-webpack-plugin": "^4.3.2",
    "postcss": "^8.2.1",
    "postcss-loader": "^4.1.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.2",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.3.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "cross-fetch": "^3.0.6",
    "express": "^4.17.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-helmet-async": "^1.0.7",
    "react-lazy-data": "^0.2.4",
    "react-lazy-ssr": "^0.2.4",
    "react-router-dom": "^5.2.0"
  }
}
